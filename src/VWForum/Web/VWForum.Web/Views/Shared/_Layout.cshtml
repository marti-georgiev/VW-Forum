<!DOCTYPE html>
<html lang="bg">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@ViewBag.Title - VW Forum</title>
  <link rel="stylesheet" href="~/css/site.css" />
 
  @RenderSection("Scripts", required: false)
</head>
<body>
  <header>
    <img src="~/Images/Icons/VWForumLogo.png" alt="VW Forum Logo" class="logo">
  </header>

  <nav class="main-nav">
    <ul class="left-menu">
     
      <li style="position: relative;">
        <img src="~/Images/Icons/list.png" alt="Меню" class="icon menu-icon" onclick="toggleDropdown()">
                <div id="menuDropdown" class="dropdown-content">
                    <a asp-controller="Thread" asp-action="Create">Създаване на форум</a>
                    <a asp-controller="Ads" asp-action="Create">Създаване на обяви</a>
                </div>
      </li>
      <li><a asp-controller="Forums" asp-action="Index">Форуми</a></li>
      <li><a asp-controller="Users" asp-action="Index">Потребители</a></li>
    </ul>
    <ul class="right-menu">
      <li>
        <a asp-controller="Home" asp-action="FAQ">
          <img src="~/Images/Icons/question.png" alt="ЧЗВ" class="icon">
        </a>
      </li>
      <li>
        <a asp-area="Identity" asp-page="/Account/Login">
          <img src="~/Images/Icons/enter.png" alt="Вход" class="icon">
        </a>
      </li>
      <li>
        <a asp-area="Identity" asp-page="/Account/Register">
          <img src="~/Images/Icons/next.png" alt="Регистрация" class="icon">
        </a>
      </li>
    </ul>
  </nav>

  <nav class="sub-nav">
    <a asp-controller="Home" asp-action="Index">
      <img src="~/Images/Icons/home-icon-silhouette.png" alt="Начало" class="icon home-icon">
    </a>
    <h1>Home</h1>
    <input type="text" placeholder="Търсене..." class="search-bar">
  </nav>

  <main>
    @RenderBody()
  </main>

  <footer>
    <p>Форумът е създаден с цел забавление</p>
    <p>&copy; 2025 Всички права запазени.</p>
  </footer>

  <script>
    function toggleDropdown() {
      document.getElementById("menuDropdown").classList.toggle("show");
    }

    window.onclick = function(event) {
      if (!event.target.matches('.menu-icon')) {
        var dropdowns = document.getElementsByClassName("dropdown-content");
        for (var i = 0; i < dropdowns.length; i++) {
          var openDropdown = dropdowns[i];
          if (openDropdown.classList.contains('show')) {
            openDropdown.classList.remove('show');
          }
        }
      }
    }
  </script>
</body>
</html>
