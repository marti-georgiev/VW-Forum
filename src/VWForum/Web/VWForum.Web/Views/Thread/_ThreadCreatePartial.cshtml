@using VWForum.Web.Models.Thread
@model ThreadCreateModel

<div class="thread-create-form">
    <h2>Създаване на нова тема</h2>

    <form asp-controller="Thread" asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Title">Заглавие</label>
            <input asp-for="Title" class="form-control" aria-required="true" placeholder="Име на поста..." />
        </div>

        <div class="form-group">
            <label asp-for="Content">Съдържание</label>
            <textarea asp-for="Content" class="form-control" aria-required="true" placeholder="Текст..."></textarea>
        </div>

        <div class="form-group">
            <input type="hidden" asp-for="TagsIds" />
            <label>Тагове</label>
            <input class="form-control tags-input" placeholder="Тагове..." />
        </div>

        <button type="submit" class="btn-submit">Създай тема</button>
    </form>
</div>
