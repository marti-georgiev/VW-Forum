@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<div id="register-wrapper">
    <div id="register-container">
        <h2 class="section-title">Създаване на акаунт</h2>
        <div id="register-box">
            <form id="register-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-group">
                    <label asp-for="Input.Username" class="form-label">Потребителско име</label>
                    <input asp-for="Input.Username" class="form-control" autocomplete="username" aria-required="true" placeholder="Потребителско име" />
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Email" class="form-label">Имейл</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Имейл" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Password" class="form-label">Парола</label>
                    <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="••••••" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword" class="form-label">Потвърди паролата</label>
                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="••••••" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button id="register-submit" type="submit" class="btn-primary">Регистрация</button>
                </div>
            </form>
        </div>
    </div>
</div>

